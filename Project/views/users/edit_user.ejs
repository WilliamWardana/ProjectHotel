<%- include('../layout/navbar') %>

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background: linear-gradient(#3d2f14, #dbab51);">
    <div class="card p-5 shadow-lg" 
         style="width: 400px; background: rgba(255,255,255,0.15); backdrop-filter: blur(10px); border-radius: 20px; border: 1px solid rgba(255,255,255,0.2);">
        
        <h2 class="text-center mb-4 fw-bold text-white">Edit User</h2>

        <form method="post" action="/data_user/edit_user/<%= user.id %>">

            <div class="mb-3 position-relative">
                <label for="username" class="form-label text-white">Username</label>
                <input type="text" class="form-control ps-5" id="username" name="username" placeholder="Enter username" value="<%= user.username %>" required style="border-radius: 10px; padding: 12px;">
                <i class="fas fa-user position-absolute" style="top: 38px; left: 15px; color: white;"></i>
            </div>

            <div class="mb-3 position-relative">
                <label for="password" class="form-label text-white">Password</label>
                <input type="password" class="form-control ps-5" id="password" name="password" placeholder="Enter password" style="border-radius: 10px; padding: 12px;">
                <i class="fas fa-lock position-absolute" style="top: 38px; left: 15px; color: white;"></i>
            </div>

            <div class="mb-4">
                <label for="role" class="form-label text-white">Role</label>
                <select name="role" id="role" class="form-select" style="border-radius: 10px; padding: 12px;">
                  <% if (user.role === 'admin') { %>
                    <option selected value="admin">Admin</option>
                    <option value="staff">Staff</option>
                    <option value="clients">Clients</option>
                  <% } else if (user.role === 'staff') { %>
                    <option selected>Staff</option>
                    <option value="clients">Clients</option>
                  <% } else { %>
                    <option selected>Clients</option>
                    <option value="staff">Staff</option>
                  <% } %>
                </select>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary w-45" style="border-radius: 12px; font-weight: 600;">Submit</button>
                <a href="/data_user" class="btn btn-light w-45" style="border-radius: 12px; font-weight: 600;">Cancel</a>
            </div>

        </form>
    </div>
</div>
