
<div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 1;"></div>

    <div 
        class="card p-4 shadow-lg" 
        style="position: relative;
            z-index: 2;
            width: 60%;
            max-width: 600px; 
            background: rgba(255,255,255,0.15); 
            backdrop-filter: blur(10px); 
            border-radius: 20px; 
            border: 1px solid rgba(255,255,255,0.2);">

        <h2 class="text-center mb-4" style="color: #fff; font-weight: 600;">Login</h2>
        
        <form method="post" action="/login">
            <div class="mb-3">
                <label for="username" class="form-label text-white">Username</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Enter username" style="border-radius: 10px; padding: 12px;" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label text-white">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password" style="border-radius: 10px; padding: 12px;" required>
            </div>
            <button type="submit" class="btn btn-primary w-100" style="padding: 12px; border-radius: 12px; font-weight: 600; transition: 0.3s;">
                Login
            </button>
        </form>
        <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-warning mt-3" role="alert">
                <%= error %>
            </div>
        <% } %>
    </div>
</div>
