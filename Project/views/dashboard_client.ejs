<div class="container my-4">
  <!-- Welcome -->
  <div class="mb-4">
    <h2>Halo, <span class="text-primary"><%= user.name %> ðŸ‘‹</span></h2>
    <p>Selamat datang di hotel. Silakan pilih kamar atau cek reservasi Anda.</p>
  </div>

  <!-- Kamar tersedia -->
  <h4 class="mb-3">Kamar Tersedia</h4>
  <div class="row g-3">
    <% dataKamar.forEach((kamar) => { %>
      <div class="col-md-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= kamar.tipe_kamar.charAt(0).toUpperCase() + kamar.tipe_kamar.slice(1) %></h5>
            <p class="card-text">Rp <%= kamar.harga_per_malam.toLocaleString() %> / malam</p>
            <a href="/book/<%= kamar.id %>" class="btn btn-primary mt-auto">Pesan Sekarang</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- Reservasi Saya -->
  <h4 class="mt-5 mb-3">Reservasi Saya</h4>
  <div class="card shadow-sm">
    <div class="card-body">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th>Kamar</th>
            <th>Check-in</th>
            <th>Check-out</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% if (bookings.length > 0) { %>
            <% bookings.forEach(booking => { %>
              <tr>
                <td><%= booking.roomName %></td>
                <td><%= booking.checkIn %></td>
                <td><%= booking.checkOut %></td>
                <td>
                  <% if (booking.status === "confirmed") { %>
                    <span class="badge bg-success">Dikonfirmasi</span>
                  <% } else if (booking.status === "pending") { %>
                    <span class="badge bg-warning">Menunggu</span>
                  <% } else { %>
                    <span class="badge bg-secondary">Selesai</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4" class="text-center text-muted">Belum ada reservasi</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Promo -->
  <h4 class="mt-5 mb-3">ðŸ”¥ Promo & Notifikasi</h4>
  <% promos.forEach(promo => { %>
    <div class="alert alert-info"><%= promo.message %></div>
  <% }) %>
</div>
